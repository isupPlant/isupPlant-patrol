<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="36dp" android:background="@drawable/sl_transparent_press_no_stroke">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text=""
        android:id="@+id/itemXJTempAreaName"
        android:gravity="center"
        android:textColor="@color/xjTextColor"
        android:textSize="14sp"
        android:tag="itemXJTempAreaName"
        android:layout_marginLeft="25dp"
        android:layout_centerVertical="true"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/xjLineColor"
        android:layout_marginLeft="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="6"
        android:id="@+id/itemXJTempAreaWorkNum"
        android:textColor="@color/xjAreaBlue"
        android:textSize="14sp"
        android:tag="itemXJTempAreaWorkNum"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_50"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/itemXJTempAreaTag"
        android:tag="itemXJTempAreaTag"
        android:src="@drawable/ic_xj_area_undone"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_centerVertical="true"
        android:scaleType="center"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/itemXJTempAreaCheckbox"
        android:tag="itemXJTempAreaCheckbox"
        android:src="@drawable/ic_choose_no"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:visibility="visible"
        />
</RelativeLayout>