<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.supcon.mes.module_xj" >

    <application
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity-alias
            android:name=".ui.XJSlashActivity"
            android:screenOrientation="portrait"
            android:enabled="false"
            android:theme="@style/AppNoTitleBarTheme"
            android:targetActivity=".ui.XJSlashActivity"
            android:icon="@drawable/ic_xj_launcher"
            android:label="移动巡检"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="ACTIVITY_ROUTER"
                android:value="XJ_TASK_LIST"/>
        </activity-alias>

        <activity
            android:name=".ui.XJSlashActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/XJLaunchTheme"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
            />
        <activity
            android:name=".ui.XJTaskListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoTitleBarTheme"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
            />
        <activity
            android:name=".ui.XJTaskDetailActivity"
            android:theme="@style/XJFloatStyle"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
            />
        <activity
            android:name=".ui.XJTaskGetActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoTitleBarTheme"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
            />
        <activity
            android:name=".ui.XJTaskUploadActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoTitleBarTheme"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
            />
        <activity
            android:name=".ui.XJWorkActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoTitleBarTheme"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
            />
        <activity
            android:name=".ui.XJWorkViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoTitleBarTheme"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
            />
        <activity
            android:name="com.supcon.mes.module_xj.ui.XJRouteListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoTitleBarTheme"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
            />
        <service android:name="com.supcon.mes.testo_805i.controller.InfraredService"/>
    </application>
</manifest>
