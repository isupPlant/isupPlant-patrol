<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/themeColor"
    android:id="@+id/titleLayout"
    android:tag="titleLayout">
    <com.supcon.mes.mbap.view.CustomImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/leftBtn"
        android:tag="leftBtn"
        android:src="@drawable/sl_top_back"
        app:text_size_float="14sp"
        android:background="@null"
        android:layout_marginLeft="0dp"
        android:scaleType="fitCenter"
        android:padding="13dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleText"
        android:tag="titleText"
        android:layout_centerInParent="true"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:gravity="center"
        />

    <com.supcon.mes.mbap.view.CustomImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/rightBtn"
        android:tag="rightBtn"
        android:visibility="visible"
        android:background="@null"
        android:scaleType="center"
        android:padding="15dp"
        app:text_size_float="14sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@+id/rightBtn2"
        />

    <com.supcon.mes.mbap.view.CustomImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/rightBtn2"
        android:tag="rightBtn2"
        android:visibility="gone"
        android:src="@drawable/sl_top_submit"
        android:background="@null"
        android:scaleType="center"
        android:padding="15dp"
        app:text_size_float="14sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/dp_10"
        />
</RelativeLayout>