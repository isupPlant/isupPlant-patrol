<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/bgGray2">
    <include layout="@layout/ly_titlebar_local"/>
    <include layout="@layout/ly_xj_task_list_filter" android:layout_marginTop="50dp" android:layout_width="match_parent" android:layout_height="@dimen/dp_40"/>
    <include layout="@layout/ly_recyclerview_with_scrollbar" android:layout_marginTop="92dp" android:layout_height="match_parent" android:layout_width="match_parent"
        android:layout_marginBottom="41dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:background="@drawable/sh_white_stroke"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="获取任务"
                android:gravity="center"
                android:textColor="@color/sl_xj_blue_text"
                android:textSize="13sp"
                android:layout_gravity="center_vertical"
                android:id="@+id/xjTaskGetTaskBtn"
                android:tag="xjTaskGetTaskBtn" />
            <TextView
                android:id="@+id/xjTaskGetTaskNum"
                android:tag="xjTaskGetTaskNum"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="40dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/sh_tip"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>


        <include layout="@layout/ly_vertical_line"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="上传任务"
                android:gravity="center"
                android:textColor="@color/sl_xj_blue_text"
                android:textSize="13sp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:id="@+id/xjTaskUploadTaskBtn"
                android:tag="xjTaskUploadTaskBtn" />
            <TextView
                android:id="@+id/xjTaskUploadTaskNum"
                android:tag="xjTaskUploadTaskNum"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="40dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/sh_tip"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>



    </LinearLayout>
</RelativeLayout>