<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingLeft="@dimen/dp_10" android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_15" android:paddingBottom="15dp"
    android:background="@drawable/sh_white_stroke"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:id="@+id/xjRouteName"
            android:tag="xjRouteName"
            android:lines="1"
            android:text="@string/xj_patrol_item_router_name"
            android:textColor="#333333"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_xj_task_route"
            android:drawablePadding="@dimen/dp_5"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/xjRouteType"
            android:tag="xjRouteType"
            android:lines="1"
            android:textColor="#999999"
            android:textSize="12sp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="10dp"
        android:textColor="#999999"
        android:textSize="12sp"
        android:id="@+id/xjRouteRemark"
        android:tag="xjRouteRemark"
        android:layout_marginTop="@dimen/dp_5"
        android:maxLines="3"
        android:ellipsize="end"
        android:visibility="gone"
        />
</LinearLayout>