<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/xjTaskDetailParent"
    android:paddingTop="@dimen/dp_50"
    android:paddingBottom="@dimen/dp_50"
    android:tag="xjTaskDetailParent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sh_xj_task_detail"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12">
    <LinearLayout
        android:id="@+id/llContent"
        android:tag="llContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/xjTaskDetailRouteName"
                android:tag="xjTaskDetailRouteName"
                android:lines="1"
                android:text="@string/xj_patrol_router_name"
                android:textColor="#333333"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_xj_task_route"
                android:drawablePadding="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:maxWidth="200dp"
                />
            <TextView
                android:layout_width="42dp"
                android:layout_height="21dp"
                android:id="@+id/xjTaskDetailTaskState"
                android:tag="xjTaskDetailTaskState"
                android:textColor="#FF6059"
                android:textSize="13sp"
                android:background="@drawable/sh_xj_red_stroke"
                android:layout_toRightOf="@+id/xjTaskDetailRouteName"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/xj_patrol_status"
                android:gravity="center"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/xjTaskDetailScanBtn"
                android:tag="xjTaskDetailScanBtn"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_xj_detail_scan"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dp_12"
              android:layout_marginLeft="@dimen/dp_5"
              android:id="@+id/rlXjTaskDetailTableNo"
              android:layout_below="@+id/xjTaskDetailRouteName">

              <TextView
                  android:id="@+id/xjTaskDetailTableNo"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:lines="1"
                  android:tag="xjTaskDetailTableNo"
                  android:text="potroltasknew_20180306_001"
                  android:textColor="#6B6B6B"
                  android:layout_centerVertical="true"
                  android:textSize="14sp"/>
              <Button
                  android:layout_width="60dp"
                  android:layout_height="30dp"
                  android:id="@+id/xjTaskDetailTaskBtn"
                  android:tag="xjTaskDetailTaskBtn"
                  android:text="@string/xj_patrol_start"
                  android:layout_alignParentRight="true"
                  android:background="@drawable/sl_xj_task_blue"
                  android:textColor="@color/white"
                  android:textSize="15sp"
                  />

          </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/xjTaskDetailDate"
                android:tag="xjTaskDetailDate"
                android:lines="1"
                android:text="03-06 08:00 â€” 03-06 10:00"
                android:textColor="#555555"
                android:textSize="13sp"
                android:drawableLeft="@drawable/ic_xj_task_time2"
                android:drawablePadding="@dimen/dp_10"
                android:layout_below="@+id/rlXjTaskDetailTableNo"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="@dimen/dp_5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="120dp"
                android:id="@+id/xjTaskDetailStaff"
                android:tag="xjTaskDetailStaff"
                android:text="---"
                android:textColor="@color/textColorblack"
                android:textSize="13sp"
                android:ellipsize="end"
                android:lines="1"
                android:drawableLeft="@drawable/ic_xj_task_staff2"
                android:drawablePadding="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/xjTaskDetailDate"
                android:layout_marginRight="@dimen/dp_5"
                android:gravity="center_vertical"
                />
        </RelativeLayout>
        <include layout="@layout/ly_line_light" android:layout_height="@dimen/dp_1"
            android:layout_width="match_parent" android:layout_marginTop="@dimen/dp_15"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_10"
            android:id="@+id/xjTaskDetailContentView"
            android:tag="xjTaskDetailContentView"/>
    </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/xjTaskDetailCloseBtn"
            android:tag="xjTaskDetailCloseBtn"
            android:src="@drawable/sl_xj_detail_close"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
</RelativeLayout>